{
  "name": "@openstax/flex-page-editor",
  "version": "1.0.2",
  "sideEffects": false,
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.25",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "cspell": "^5.18.5",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "npm-run-all": "^4.1.5",
    "typescript": "4.6"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "@openstax/flex-page-renderer": "1.0.3",
    "@openstax/ui-components": "https://github.com/openstax/ui-components#1.15.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.5"
  },
  "exports": {
    ".": {
      "browser": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "browser": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/esm/*",
        "dist/esm/*.d.ts",
        "dist/esm/*/index.d.ts"
      ]
    }
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "./script/build.bash",
    "build:clean": "yarn clean && yarn build",
    "ci": "CI=true npm-run-all ci:*",
    "ci:lint": "eslint --max-warnings=0 .",
    "ci:spelling": "git ls-files | yarn cspell -c ../../cspell.json --file-list stdin",
    "ci:typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  }
}
